<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailActivity">

    <com.ui.ApkSteady.ui.view.ResizableImageView
        android:id="@+id/imageView_detail_top_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/detail_top_banner" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/tv_detail_match_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="-    未开始    -"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_detail_top_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.61" />

    <TextView
        android:id="@+id/tv_detail_match_starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="开赛时间 05-29 22:30"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/tv_detail_match_state"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.806" />

    <TextView
        android:id="@+id/tv_detail_match_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="英格兰足总杯"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_detail_match_starttime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.827" />

    <ImageView
        android:id="@+id/ivdetail_match_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_detail_match_team_name"
        android:layout_alignBottom="@id/tv_detail_match_team_name"
        android:layout_toLeftOf="@id/tv_detail_match_team_name"
        android:src="@mipmap/detail_team_logo_england"
        app:layout_constraintBottom_toBottomOf="@+id/tv_detail_match_team_name"
        app:layout_constraintEnd_toStartOf="@+id/tv_detail_match_team_name"
        app:layout_constraintHorizontal_bias="0.908"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_detail_match_team_name"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/iv_detail_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_detail_match_team_name"
        app:layout_constraintEnd_toStartOf="@+id/ivdetail_match_name"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_detail_match_team_name"
        app:layout_constraintVertical_bias="0.857"
        app:srcCompat="@mipmap/detail_back" />

    <ImageView
        android:id="@+id/iv_team_logo_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_detail_match_state"
        app:layout_constraintStart_toStartOf="@+id/iv_detail_back"
        app:layout_constraintTop_toTopOf="@+id/tv_detail_match_state"
        app:srcCompat="@mipmap/team_logo_brighton" />

    <ImageView
        android:id="@+id/iv_detail_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_detail_match_team_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/tv_detail_match_team_name"
        app:layout_constraintTop_toTopOf="@+id/tv_detail_match_team_name"
        app:layout_constraintVertical_bias="0.857"
        app:srcCompat="@mipmap/detail_start_mark" />

    <TextView
        android:id="@+id/tv_team_name_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="布莱顿"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/iv_team_logo_a"
        app:layout_constraintTop_toBottomOf="@+id/iv_team_logo_a" />

    <ImageView
        android:id="@+id/iv_team_logo_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_detail_match_state"
        app:layout_constraintEnd_toEndOf="@+id/iv_detail_mark"
        app:layout_constraintTop_toTopOf="@+id/tv_detail_match_state"
        app:srcCompat="@mipmap/team_logo_brighton" />

    <TextView
        android:id="@+id/tv_team_name_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="莱斯特城"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_team_name_a"
        app:layout_constraintEnd_toEndOf="@+id/iv_team_logo_b"
        app:layout_constraintTop_toTopOf="@+id/tv_team_name_a" />

    <LinearLayout
        android:id="@+id/ll_video_playbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/detail_video_play_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingTop="@dimen/dimen_5"
        android:paddingRight="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_5"
        app:layout_constraintBottom_toBottomOf="@+id/tv_team_name_a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_team_name_a">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_10"
            android:src="@mipmap/detail_video_play" />

        <TextView
            android:id="@+id/tv_detail_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_detail_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingTop="@dimen/dimen_5"
        android:paddingRight="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_5"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_detail_top_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_video_playbg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_10"
            android:src="@mipmap/detail_flag" />

        <TextView
            android:id="@+id/tv_score_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 - 3"
            android:textColor="@color/white"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_yellow_a"
        style="@style/DetailTeamScoreNocolor"
        android:layout_marginStart="12dp"
        android:background="@drawable/detail_score_bg_yellow"
        android:text="2"
        android:textColor="@color/c_2a2a2a"
        app:layout_constraintBottom_toBottomOf="@+id/iv_team_logo_a"
        app:layout_constraintStart_toEndOf="@+id/iv_team_logo_a"
        app:layout_constraintTop_toTopOf="@+id/iv_team_logo_a" />

    <TextView
        android:id="@+id/tv_red_a"
        style="@style/DetailTeamScoreNocolor"
        android:layout_marginStart="6dp"
        android:background="@drawable/detail_score_bg_red"
        android:text="3"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/iv_team_logo_a"
        app:layout_constraintStart_toEndOf="@+id/tv_yellow_a"
        app:layout_constraintTop_toTopOf="@+id/iv_team_logo_a" />

    <TextView
        android:id="@+id/tv_red_b"
        style="@style/DetailTeamScoreNocolor"
        android:layout_marginEnd="12dp"
        android:background="@drawable/detail_score_bg_red"
        android:text="1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/iv_team_logo_b"
        app:layout_constraintEnd_toStartOf="@+id/iv_team_logo_b"
        app:layout_constraintTop_toTopOf="@+id/iv_team_logo_b" />

    <TextView
        android:id="@+id/tv_yellow_b"
        style="@style/DetailTeamScoreNocolor"
        android:layout_marginEnd="6dp"
        android:background="@drawable/detail_score_bg_yellow"
        android:text="2"
        android:textColor="@color/c_2a2a2a"
        app:layout_constraintBottom_toBottomOf="@+id/iv_team_logo_b"
        app:layout_constraintEnd_toStartOf="@+id/tv_red_b"
        app:layout_constraintTop_toTopOf="@+id/iv_team_logo_b" />


    <ViewStub
        android:id="@+id/vs_nodiscuss"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        android:layout="@layout/viewstub_no_discuss_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_detail_top_bg" />

    <ViewStub
        android:id="@+id/vs_matchdata"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        android:layout="@layout/recycle_matchdata_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_detail_top_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>