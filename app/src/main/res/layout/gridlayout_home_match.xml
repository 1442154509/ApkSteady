<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ui.ApkSteady.ui.view.AutoSizeImageView
        android:id="@+id/iv_homematch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/matching"
        android:scaleType="center" />

    <TextView
        android:id="@+id/tv_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_homematch"
        android:layout_alignTop="@id/iv_homematch"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="9dp"
        android:gravity="center_horizontal"
        android:text="队伍名称"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_playstate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_homematch"
        android:layout_alignRight="@id/iv_homematch"
        android:layout_marginTop="9dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal"
        android:text="直播中"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_expositor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_homematch"
        android:layout_alignBottom="@id/iv_homematch"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="9dp"
        android:gravity="center_horizontal"
        android:text="解说员"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_viewNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/iv_homematch"
        android:layout_alignBottom="@id/iv_homematch"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="9dp"
        android:gravity="center_horizontal"
        android:text="3456"
        android:textColor="@color/white" />

    <com.ui.ApkSteady.ui.view.AutoSizeImageView
        android:id="@+id/iv_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_viewNum"
        android:layout_alignBottom="@id/tv_viewNum"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/tv_viewNum"
        android:adjustViewBounds="true"
        android:background="@drawable/match_view_eye"
        android:scaleType="center" />

    <TextView
        android:id="@+id/tv_home_matchvs_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_homematch"
        android:gravity="center_horizontal"
        android:text="这是一场比赛"
        android:textColor="@color/hometext_teamvs" />
</RelativeLayout>