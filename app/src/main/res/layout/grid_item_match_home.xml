<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_5"
    android:layout_marginRight="@dimen/dimen_5"
    android:background="@drawable/home_item_corner_matchwhite"
    android:elevation="1dp"
    android:padding="5dp"
    android:translationZ="1dp">

    <com.ui.ApkSteady.ui.view.ResizableImageView
        android:id="@+id/iv_homematch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/tv_competitionname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_homematch"
        android:layout_alignTop="@id/iv_homematch"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="9dp"
        android:text="联赛名"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/ll_match_state_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_homematch"
        android:layout_alignRight="@id/iv_homematch"
        android:gravity="center|center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <com.ui.ApkSteady.ui.view.ResizableImageView
            android:id="@+id/iv_matchstate"
            android:layout_width="14dp"
            android:layout_height="13dp"
            android:layout_marginRight="3dp"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/tv_playstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_matchstate"
            android:layout_alignBottom="@id/iv_matchstate"
            android:layout_toRightOf="@id/iv_matchstate"
            android:text="直播中"
            android:textColor="@color/white" />
    </LinearLayout>


    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_expositor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_homematch"
        android:layout_alignBottom="@id/iv_homematch"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="9dp"
        android:text="解说员"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/iv_homematch"
        android:layout_alignBottom="@id/iv_homematch"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="9dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.ui.ApkSteady.ui.view.ResizableImageView
            android:id="@+id/iv_eye"
            android:layout_width="14dp"
            android:layout_height="13dp"
            android:adjustViewBounds="true" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_viewNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="5dp"
            android:text="3456"
            android:textColor="@color/white" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_home_match_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_homematch"
        android:layout_marginLeft="15dp"
        android:gravity="left"
        android:text="比赛名"
        android:textColor="@color/c_2a2a2a"
        android:textSize="15sp" />
</RelativeLayout>